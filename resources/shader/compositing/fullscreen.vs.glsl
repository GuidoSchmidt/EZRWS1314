//VERTEX SHADER
#version 330

//*** Uniform block definitions ************************************************

//*** Input ********************************************************************
layout (location = 0) in vec3 position;
layout (location = 1) in vec2 uv;

//*** Output *******************************************************************
out vec2 vsUV;

//*** Uniforms *****************************************************************

//*** Main *********************************************************************
void main(void)
{   
	vsUV = uv;
	gl_Position = vec4(position, 1.0);
}